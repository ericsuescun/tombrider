<div class="container-fluid productIndex">
  <div class="row">
    <div class="col-12 col-lg-6 mx-auto">
      <h2>Ingresar</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label 'Email' %><br />
        <%= f.email_field :email, class: "form-control input-lg", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label 'Contaseña' %><br />
        <%= f.password_field :password, class: "form-control input-lg", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label 'Recuérdame' %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Ingresar", class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
