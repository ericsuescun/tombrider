<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
        	<h2>Olvidaste la contraseña?</h2>

        	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, class: "form-control input-lg", autofocus: true, autocomplete: "email" %>
                </div>
                <div class="actions">
                    <%= f.submit "Envíame instrucciones para cambio de contraseña", class: "btn btn-warning btn-lg btn-block" %>
                </div>
        	<% end %>
        	<%= render "devise/shared/links" %>
        </div>
    </div>
</div>