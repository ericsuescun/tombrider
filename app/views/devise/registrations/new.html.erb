<div class="container-fluid productIndex">
  <div class="row">
    <div class="col-12 col-lg-4 mx-auto cuadro">
      <h2>Regístrate</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label "Nombre" %><br />
          <%= f.text_field :name, class: "form-control input-lg", autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group">
          <%= f.label "Teléfono fijo" %><br />
          <%= f.text_field :tel, class: "form-control input-lg", autocomplete: "tel" %>
        </div>

        <div class="form-group">
          <%= f.label "Celular" %><br />
          <%= f.text_field :cel, class: "form-control input-lg", autocomplete: "cel" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control input-lg", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, class: "form-control input-lg", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control input-lg", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Regístrate", class: "btn btn-warning btn-lg btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
