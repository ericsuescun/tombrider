<div class="container-fluid productIndex">
  <div class="row">
    <div class="col-12 col-lg-4 mx-auto cuadro">
      <h2>Editar <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label "Nombre" %><br />
          <%= f.text_field :name, class: "form-control input-lg", autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group">
          <%= f.label "Teléfono fijo" %><br />
          <%= f.text_field :tel, class: "form-control input-lg", autocomplete: "tel" %>
        </div>

        <div class="form-group">
          <%= f.label "Celular" %><br />
          <%= f.text_field :cel, class: "form-control input-lg", autocomplete: "cel" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control input-lg", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password %> <i>(déjalo vacío si no lo quieres cambiar)</i><br />
          <%= f.password_field :password, class: "form-control input-lg", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caracteres mínimo</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control input-lg", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, class: "form-control input-lg" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, class: "form-control input-lg", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>

      <h3>Cancelar mi cuenta</h3>

      <p>Incómoda(o)? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas segura( 
        o)?" }, method: :delete, class: "btn btn-primary btn-lg btn-block" %></p>

      <%= link_to "Volver", :back, class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
</div>