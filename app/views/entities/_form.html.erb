<div class="container-fluid productIndex">
  <div class="row">
    <div class="col-12 col-lg-6 mx-auto">
      <div class="actions">
        <%= link_to 'Volver a entidades', entities_path, class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <%= form_with(model: entity, local: true) do |form| %>
        <% if entity.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

            <ul>
            <% entity.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-6">
              <h4 class="text-muted my-3">Información corporativa</h4>
              <%= form.label 'Nombre' %>
              <%= form.text_field :name, class: "form-control form-control-sm input", autofocus: true, autocomplete: "nombre" %>

              <%= form.label 'Dirección' %>
              <%= form.text_field :address, class: "form-control form-control-sm input" %>

              <%= form.label 'Website' %>
              <%= form.text_field :website, class: "form-control form-control-sm input" %>

              <%= form.label 'Email corporativo' %>
              <%= form.text_field :email, class: "form-control form-control-sm input" %>

              <%= form.label 'Ubicación geográfica' %>
              <%= form.text_field :location, class: "form-control form-control-sm input" %>

              <%= form.label 'Teléfono conmutador' %>
              <%= form.text_field :tel, class: "form-control form-control-sm input" %>

              <%= form.label 'Celular conmutador' %>
              <%= form.text_field :cel, class: "form-control form-control-sm input" %>
            </div>
            <div class="col-sm-6">
              <h4 class="text-muted my-3">Información de contacto</h4>
              <%= form.label 'Contacto' %>
              <%= form.text_field :contactname, class: "form-control form-control-sm input" %>

              <%= form.label 'Email del contacto' %>
              <%= form.text_field :contactemail, class: "form-control form-control-sm input" %>

              <%= form.label 'Teléfono del contacto' %>
              <%= form.text_field :contacttel, class: "form-control form-control-sm input" %>

              <%= form.label 'Celular del contacto' %>
              <%= form.text_field :contactcel, class: "form-control form-control-sm input" %>
            </div>
          </div>
          <div class="actions">
            <%= form.submit "Guardar entidad", class: "btn btn-primary btn btn-block mt-3" %>
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>


