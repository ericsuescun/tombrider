            <h1>Contacto: <%= entity.contactname %></h1>
            <h1>Tel√©fono: <%= entity.contacttel %></h1>
            <h1>Celular: <%= entity.contactcel %></h1>
            <h1>Email: <%= entity.contactemail %></h1>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    </div>
  </div> 
</div>

