<div class="containter productIndex">
  <div class="row">
    <div class="col-10 col-lg-12 mx-auto">
      <div class="actions">
        <%= link_to 'Nueva entidad', new_entity_path, class: "btn btn-warning btn-lg btn-block mb-3" %>
      </div>
