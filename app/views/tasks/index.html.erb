<h1>Clientes potenciales</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Tel</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.tel %></td>
        <td><%= link_to 'Detalles', task_path(customer) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>