<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= form_with(model: tomb, local: true) do |form| %>
        <% if tomb.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(tomb.errors.count, "error") %> prohibited this tomb from being saved:</h2>

            <ul>
            <% tomb.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :Título %>
          <%= form.text_field :title, class: "form-control input-lg", autofocus: true, autocomplete: "título" %>
        </div>

        <div class="form-group">
          <%= form.label :Descripción %>
          <%= form.text_area :description, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= form.label :Area %>
          <%= form.number_field :area, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= form.label :Capacidad %>
          <%= form.number_field :capacity, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= form.label :Localización %>
          <%= form.text_field :location, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= form.label :Notas %>
          <%= form.text_area :notes, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= form.label :Precio %>
          <%= form.text_field :price, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= form.label :Categoría %>
          <%= form.number_field :category, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= form.label :Entidad %>
          <%= form.text_field :entity, class: "form-control input-lg" %>
        </div>

        <div class="actions">
          <%= form.submit "Crear", class: "btn btn-warning btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



