<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <h1>Anuncios Clasificados</h1>
      <% @tombs.each do |tomb| %>
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4">
            <% if tomb.pictures.length != 0 %>
            <img src="<%= tomb.pictures.first.image.url  %>" class="card-img-top" alt="..."  style="width: 14rem;">
            <% else %>
            <img src="<%= asset_path 'noimage.JPG' %>" class="card-img-top" alt="..."  style="width: 14rem;">
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= link_to tomb.title, tomb %></h5>
              <h5 class="card-title"><%= number_to_currency(tomb.price, precision: 0, delimiter: '.') %></h5>
              <p class="card-text d-inline">Ubicaci√≥n: <%= tomb.entity %></p>
              <p class="card-text d-inline"> - Capacidad: <%= tomb.capacity %></p>
              <p class="card-text d-inline"> - Tipo: <%= tomb.category %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

