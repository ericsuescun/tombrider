<div class="container-fluid mainIndex">
  <div class="row">
    <div class="col-12 mx-auto">
      <h1>Anuncios Clasificados</h1>
      <% @tombs.each do |tomb| %>
      <div class="card mx-auto" style="width: 30rem;">
        <% if tomb.pictures.length != 0 %>
        <img src="<%= tomb.pictures.first.image.url  %>" class="card-img-top" alt="...">
        <% else %>
        <img src="<%= asset_path 'noimage.JPG' %>" class="card-img-top" alt="...">
        <% end %>

        <div class="card-body ml-4">
          <h5 class="card-title display-5"><%= link_to tomb.title, tomb %></h5>
          <h5 class="card-title display-4"><%= number_to_currency(tomb.price, precision: 0, delimiter: '.') %></h5>
          <p class="card-text d-inline display-5">Ubicaci√≥n: <%= tomb.entity %></p>
          <p class="card-text d-inline display-5"> - Capacidad: <%= tomb.capacity %></p>
          <p class="card-text d-inline display-5"> - Tipo: <%= tomb.category %></p>
        </div>


      </div>
      <% end %>
    </div>
  </div>
</div>

