<div class="container productIndex">
  <div class="row">
    <div class="col-12 col-lg-6 mx-auto">
      <%= form_with(model: product, local: true) do |form| %>
        <div class="form-group">
          <% if product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <div class="actions">
            <%= link_to 'Volver a productos', products_path, class: "btn btn-primary btn-lg btn-block mt-3" %>
          </div>
          <%= form.label 'Nombre' %>
          <%= form.text_field :name, class: "form-control form-control-lg input", autofocus: true, autocomplete: "nombre" %>

          <div class="actions">
            <%= form.submit "Guardar", class: "btn btn-primary btn-lg btn-block mt-3" %>
          </div>
        </div> 
      <% end %>
    </div>
  </div>
</div>
