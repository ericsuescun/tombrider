<div class="containter-fluid productIndex">
  <div class="row">
    <div class="col-12 col-lg-6 mx-auto">
        <%= link_to "Volver al anuncio", tomb_path(@tomb), class: "btn btn-primary btn-lg btn-block" %>
        <h1>Edición de cliente</h1>
    	<%= form_for @customer do |f| %>
    	  <div class="form-group">
    	    <%= f.text_field :name, class: "form-control form-control-lg input", placeholder: "Nombre" %>
    	  </div>
    	  <div class="form-group">
    	    <%= f.email_field :email, class: "form-control form-control-lg input", placeholder: "Email" %>
    	  </div>
    	  <div class="form-group">
    	    <%= f.text_field :tel, class: "form-control form-control-lg input", placeholder: "Celular/Teléfono" %>
    	  </div>
    	  <div class="form-group form-check">
    	    <%= f.check_box :done, class: "form-check-input" %>
    	    <%= f.label 'Atendido', class: "form-check-label" %>
    	  </div>
    	  <div class="actions text-right">
    	    <%= f.submit "Guardar", class: "btn btn-primary btn-block mb-3" %>
    	  </div>
    	<% end %>
        <%= link_to "Borrar", customer_path(@customer), method: :delete, data: { confirm: 'Confirmas el borrado?' }, class: "btn btn-danger btn-block mb-3" %>
    </div>
  </div>
</div>